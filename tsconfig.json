{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "es6"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src"],
  "exclude": ["dist", "example", "node_modules"]
}
